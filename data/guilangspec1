FILE -> [ HEADER ] GUI

HEADER -> ( EVENTDECL | VARIABLEDECL ) [ HEADER ]
EVENTDECL -> 'event' ':' EVENTDECLLIST
EVENTDECLLIST -> @ [ ',' EVENTDECLLIST ]
VARIABLEDECL -> 'var' ':' VARIABLEDECLLIST
VARIABLEDECLLIST -> @ [ ',' VARIABLEDECLLIST ]

GUI -> 'GUI' [ GUIHEADER ] [ WINDOWLIST ]
GUIHEADER -> '(' GUIHEADERPARAMLIST ')'
GUIHEADERPARAMLIST -> ( DIMENSION | POSITION ) [ ',' GUIHEADERPARAMLIST ]

WINDOWLIST -> WINDOW [ WINDOWLIST ] 
WINDOW -> 'WINDOW' [ WINDOWHEADER ] '{' [ CELL ] '}'
WINDOWHEADER -> '(' WINDOWHEADERPARAMLIST ')'
WINDOWHEADERPARAMLIST ->  ( DIMENSION | POSITION | NAME ) [ ',' WINDOWHEADERPARAMLIST ]

CELL -> 'CELL' '{' [ CELLBRANCH | CELLOBJECT ] '}'
CELLBRANCH -> CELLBRANCHHEADER CELLLIST
CELLLIST -> CELL [ CELLLIST ]
CELLBRANCHHEADER -> '(' ORIENTATION [ ',' CELLPARTITIONS ] ')' 
CELLPARTITIONS -> # [ ',' CELLPARTITIONS ]
CELLOBJECT -> ( BUTTON | TEXT | VIEWPORT | SLIDER )

BUTTON -> 'BUTTON' '(' [ BUTTONPARAMLIST ] ')'
BUTTONPARAMLIST -> BUTTONPARAM [ ',' BUTTONPARAMLIST ]
BUTTONPARAM -> ( DIMENSION | POSITION | NAME | TEXT | MOUSEEVENT )

VIEWPORT -> 'VIEWPORT' '(' [ VIEWPORTPARAMLIST ] ')'
VIEWPORTPARAMLIST -> VIEWPORTPARAM [ ',' VIEWPORTPARAMLIST ]
VIEWPORTPARAM -> NAME

SLIDER -> 'SLIDER' '(' [ SLIDERPARAMLIST ] ')'
SLIDERPARAMLIST -> SLIDERPARAM [ ',' SLIDERPARAMLIST ]
SLIDERPARAM -> ( NAME | DIMENSION | POSITION | SLIDERDEFAULT )
SLIDERDEFAULT -> 'value' ':' #

DIMENSION -> ( 'w' | 'h' ) ':' #
POSITION -> ( 'x' | 'y' ) ':' #
NAME -> 'name' ':' @
TEXT -> 'text' ':' @ [ TEXTFMTARGLIST ]
TEXTFMTARGLIST -> '+' ( # | @ ) [ TEXTFMTARGLIST ]
ORIENTATION -> ( 'vertical' | 'horizontal' )

MOUSEEVENT -> ( 'hover' | 'click' ) ':' EVENT

EVENT -> ( 'QUIT' )
